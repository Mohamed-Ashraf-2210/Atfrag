<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.SigupFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="90dp"
        android:adjustViewBounds="true"
        android:src="@drawable/movies2"
        />
    <TextView
        android:id="@+id/view_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@color/teal700"
        android:textSize="40sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="40dp"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boarder"
        android:hint="Full Name"
        android:textColorHint="@color/colorTextPrimary"
        android:padding="11dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="10dp"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Edit_age"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/colorTextPrimary"
        android:textStyle="bold"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/boarder"
        android:hint="Enter your Age"
        android:padding="11dp"
        android:textSize="20sp"
        android:layout_marginTop="315dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Edit_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="emailAddress"
        android:background="@drawable/boarder"
        android:hint="Enter Your E-mail"
        android:drawableRight="@drawable/baseline_email_24"
        android:textColorHint="@color/colorTextPrimary"
        android:inputType="textEmailAddress"
        android:padding="11dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="380dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="10dp"
        />
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/Edit_pass"
        android:autofillHints="password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:textColorHint="@color/colorTextPrimary"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:drawableRight="@drawable/baseline_remove_red_eye_24"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/boarder"
        android:hint="@string/enter_your_password"
        android:padding="11dp"
        android:textSize="20sp"
        android:layout_marginTop="445dp"
        />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/signupbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:textSize="30sp"
        android:gravity="center"
        android:background="@drawable/boardt"
        android:layout_marginTop="530dp"
        android:text="Sign Up"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/havenotaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="620dp"
        android:gravity="center"
        android:text="Already have an account"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/login"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginStart="260dp"
        android:layout_marginTop="620dp"
        android:textSize="22sp"
        android:textColor="@color/teal700"
        />



</FrameLayout>